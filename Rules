#!/usr/bin/env ruby

# A few helpful tips about the Rules file:
#
# * The string given to #compile and #route are matching patterns for
#   identifiers--not for paths. Therefore, you can’t match on extension.
#
# * The order of rules is important: for each item, only the first matching
#   rule is applied.
#
# * Item identifiers start and end with a slash (e.g. “/about/” for the file
#   “content/about.html”). To select all children, grandchildren, … of an
#   item, use the pattern “/about/*/”; “/about/*” will also select the parent,
#   because “*” matches zero or more characters.


preprocess do
  all_tags.each do |tag|
    items << Nanoc::Item.new(
      "",
      { :tag => tag },
      "/tags/#{slug(tag)}/"
    )
  end
end

compile '/' do
    filter :erb
    layout 'bare'
end

compile '/posts/*' do
    filter :kramdown
    layout 'post'
end

compile '/tags/*/' do
    filter :erb
    layout 'tags'
end

compile '*' do
    if item[:extension] == 'scss'
        filter :sass, :syntax => :scss
    elsif item.binary? or ['css', 'txt'].include? item[:extension]
        # do nothing
    elsif ['md', 'markdown'].include? item[:extension]
        filter :kramdown
        layout 'default'
    else
        filter :erb
        layout 'default'
    end
end

route '/keybase/' do
    '/keybase.txt'
end

route "/posts/*" do
    slug = /([^\/]+)\/?$/.match(item.identifier).captures[0]
    year = attribute_to_time(@item[:created_at]).year

    "/#{year}/#{slug}/index.html"
end

route '*' do
    if item.binary? or ['css', 'txt'].include? item[:extension]
        if item[:extension]
            item.identifier.chop + '.' + item[:extension]
        else
            item.identifier.chop
        end
    elsif item[:extension] == 'scss'
        if item.identifier[0] == '_'
            nil
        else
            item.identifier.chop + '.css'
        end
    else
        item.identifier + 'index.html'
    end
end

layout '*', :erb
